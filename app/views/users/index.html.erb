<section class="tracks">
  <% if @tracks.empty? %>
    <h1>Copy an official.fm URL and then, click the button below to paste it !</h1>
  <% end %>

  <% for track in @tracks %>
    <div class="track"
      data-stream-url="<%= track.stream_url %>"
      style="background-image: url('<%= track.cover_url %>')">
      <span class="iconic play"></span>
      <span class="iconic pause"></span>
    </div>
  <% end %>

  <div class="new">
    <a href="javascript:void(0)" id="add_player" class="iconic plus_alt"></a>
  </div>

  <audio controls="controls" id="player" class="hidden"></audio>
</section>

<form id="create_player" action="<%= tracks_path %>" method="POST">
  <input type="hidden" value="" name="player[url]" />
</form>
