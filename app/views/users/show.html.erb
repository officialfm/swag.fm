<section class="tracks">
  <%= render @user.favorites %>

  <% if current_user == @user %>
    <% if @user.favorites.empty? %>
      <div class="blank slate">
        Copy a URL from a track hosted on Official.fm or Soundcloud.com, then click on the plus button below to paste it !
      </div>
    <% end %>

    <form id="create_player" action="<%= tracks_path %>" method="POST">
      <input type="hidden" value="" name="player[url]" />
    </form>
  <% end %>

  <% if @user.favorites.empty? %>
    <h2>Too bad ... that user doesn't have any favorites yet :-(</h2>
    <% if request.referer %>
      <%= link_to 'Back to previous page', request.referer %>
    <% else %>
      <%= link_to 'Back to people', users_path %>
    <% end %>
  <% end %>
</section>
